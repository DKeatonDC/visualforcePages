<apex:page standardController="Opportunity">
    <apex:pageBlock title="Customer Receipt">
        <P>
            Generated by {!opportunity.owner.FirstName} {!opportunity.owner.LastName}
        </P>
        <apex:pageBlockSection title="Order Information">    
        <apex:outputField value="{!opportunity.name}" styleClass="spacer" />
            <apex:outputField value="{!opportunity.OrderNumber__c}"/>
            <apex:outputField value="{!opportunity.amount}"/>
            <apex:outputField value="{!opportunity.closeDate}"/>
        </apex:pageBlockSection>
        <apex:pageBlockSection title="ContactInformation">    
            <apex:outputField value="{!opportunity.account.name}"/>
            <apex:outputField value="{!opportunity.account.shippingstreet}"/>
                            </apex:pageBlockSection>
    </apex:pageBlock>
</apex:page>